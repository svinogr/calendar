<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CelebretionActivity">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/holly_activity_title_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/holly_activity_title_img"
                android:layout_width="200dp"
                android:layout_height="200dp"


                android:layout_marginBottom="8dp"

                android:src="@drawable/ic_date_range_black_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/holly_activity_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="0dp"

                android:layout_marginStart="8dp"

                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@id/holly_activity_title_img"
                app:layout_constraintLeft_toLeftOf="@id/holly_activity_title_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/holly_activity_title_img"
                app:layout_constraintTop_toTopOf="@+id/holly_activity_title_img"
                tools:text="Название" />

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/holly_activity_img_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_date_range_black_24dp"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holly_activity_title_layout" />

        <TextView
            android:id="@+id/holly_activity_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holly_activity_img_start"
            tools:text=",kdd fegfge efgegfef efkejfkl efejfejf ekjfjefjljekfjeljf jefkljefk jfkejfkejfljefkjefjel" />

        <ImageView
            android:id="@+id/holly_activity_img_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_date_range_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holly_activity_text" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>